<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/back_arrow"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt vé xem phim"
            android:textSize="24sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- danh sách combo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- my combo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/combo1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My combo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_my_combo"
                        android:text="95 000"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_decrease_my_combo"
                        android:src="@drawable/remove"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/quantity_my_combo"
                        android:text="0"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_increase_my_combo"
                        android:src="@drawable/add"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>

                <!-- CGV combo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/combo2"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGV combo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_cgv_combo"
                        android:text="125 000"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_decrease_cgv_combo"
                        android:src="@drawable/remove"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/quantity_cgv_combo"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_increase_cgv_combo"
                        android:src="@drawable/add"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Premium CGV combo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/combo3"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium CGV combo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_premium_cgv_combo"
                        android:text="135 000"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_decrease_premium_cgv_combo"
                        android:src="@drawable/remove"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/quantity_premium_cgv_combo"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_increase_premium_cgv_combo"
                        android:src="@drawable/add"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Premium My combo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/combo4"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGV combo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_premium_my_combo"
                        android:text="115 000"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_decrease_premium_my_combo"
                        android:src="@drawable/remove"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/quantity_premium_my_combo"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/button_increase_premium_my_combo"
                        android:src="@drawable/add"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Tổng giá và nút tiếp tục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_total_price"
            android:layout_gravity="center"
            android:text="0 đ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/button_continue"
            android:backgroundTint="#3368D3"
            android:text="TIẾP TỤC"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

</LinearLayout>