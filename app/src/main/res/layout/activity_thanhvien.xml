<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:id="@+id/back_arrow"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F6F6F6">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/user_avatar"
            android:src="@drawable/user"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_tv"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Menu items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="16dp">

        <!--Thông tin tài khoản-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_account_info"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#D9D9D9">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thông tin tài khoản"
                android:textSize="16sp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/arrow_account_info"
                android:src="@drawable/ic_arrow_forward"
                app:tint="#000000"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!--Lịch sử giao dịch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_transaction_history"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#D9D9D9">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lịch sử giao dịch"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/arrow_transaction_history"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Đổi mật khẩu -->
        <LinearLayout
            android:id="@+id/menu_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#D9D9D9">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đổi mật khẩu"
                android:textSize="16sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/arrow_change_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_logout"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="#FF4D4D"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>